source 'https://rubygems.org'

# HTTP client
gem 'faraday'

# Environment variable management
gem 'dotenv'

group :development, :test do
  # Testing framework
  gem 'rspec'
  
  # Code coverage
  gem 'simplecov', require: false
  
  # HTTP mocking
  gem 'webmock'
  gem 'vcr'
  
  # Debugging
  gem 'pry'
end